#include <iostream>
using namespace std;

int main() {
    int N, sum;

    cout << "Enter a positive integer: ";
    cin >> N;

    if (N > 0) {
        sum = N * (N + 1) / 2;
        cout << "The sum of natural numbers up to " << N << " is " << sum << endl;
    } else {
        cout << "Please enter a positive integer." << endl;
    }

    return 0;
}
